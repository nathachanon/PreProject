@{
Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <script src="https://cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.js"></script>
    <script src="https://cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.fusion.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>รายได้ย้อนหลัง</title>
    <meta charset="utf-8">
</head>

<body>
    <div class="main-panel">

        <div class="content-wrapper">
             <div class="row">
                <div class="col-lg-5 grid-margin stretch-card">
                    <div class="card  card-weather">
                        <div class="card-body ">
                           <div class="clearfix"> 
                                <div class="float-left mt-2"> 
                                    <i class="mb-5 mdi mdi-48px mdi-account-card-details text-success icon-lg"></i> 
                                    <br><Br>
                                    <p class="mt-3 h3 text-danger ">ห้อง พัดลม</p> 
                                    <p class="mt-3 h3 text-danger ">ห้อง แอร์</p> 

                                </div> 
                                
                                <div class="float-right"> 
                                    <p class="mb-0 h2 text-right">จำนวนผู้เช่า</p> 
                                    <div class="fluid-container"> 
                                        <h3 id="Renter" class="h1 text-success text-right mb-0">48</h3> 
                                        <p class=" h3 text-right">คน</p> 
                                         <p class="mt-3 h3 text-danger text-right">20 ห้อง</p>
                                         <p class="mt-3 h3 text-danger text-right">28 ห้อง</p>
                                         
                                    </div> 
                                </div> 
                            </div> 
                             <div class="progress mt-2">
                                        <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar"
                                            style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                             </div>
                            <p class="text-white h5 mt-3 mb-0"> 
                                <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> ข้อมูลล่าสุด 
                                  </p> 
                            <p id="renter1update" class="text-white h5 "> 
                            </p> 

                        </div>
                    </div>
                </div>

                <div class="col-lg-7 grid-margin stretch-card">
                    <div class="card card-weather">
                        <div class="card-body">
                            <p class="mb-3 h1 text-center">รายได้ที่จะได้รับอย่างน้อย </p> <br>
                             <p class="mt-0 hb text-primary text-center">120,000 ฿ </p> 

                        </div>
                    </div>
                </div>      

            </div>

            <div class="row">
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body ">
                                 <!-- กราฟไฟ-->
                            <div id="chart-elec">
                            </div> 
                                <div class="progress">
                                    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar"
                                        style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                                 <!-- กราฟไฟ-->
                           <div id="chart-water"></div> 
                                    <div class="progress">
                                        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar"
                                            style="width: 100%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>    
            </div>
           
           

        </div>
    </div>
  
    



</body>

</html>

<script>


    const water = {
         "chart": {
                    "caption": "ปริมาณการใช้น้ำ",
                    "plottooltext": "เดือน <b>$label</b> ใช้น้ำไป <b>$value</b> ยูนิต",
                    "centerlabel": "$Value",
                    "centerLabelFontSize": "15", 
                    "theme": "fusion",
                    "baseFont": "'Kanit', sans-serif",
                    "baseFontSize": "14",
                    "labelFont": "'Kanit', sans-serif",
                    "legendItemFont": "'Kanit', sans-serif"
              
                },
                "data": [{
                        "label": "ธ.ค.",
                        "value": "320"
                    },
                    {
                        "label": "ก.ค.",
                        "value": "600"
                    },
                    {
                        "label": "พ.ย.",
                        "value": "150"
                    }
                ]

    }
  
    FusionCharts.ready(function () {
        var circle = new FusionCharts({
            type: "doughnut2d",
            renderAt: "chart-water",
            width: "100%",
            height: "300",
            dataFormat: "json",
            dataSource : water
        }).render();
    });


    const elec = {
         "chart": {
                    "caption": "ปริมาณการใช้ไฟ",
                    "plottooltext": "เดือน <b>$label</b> ใช้ไฟไป <b>$value</b> ยูนิต",
                    "centerlabel": "$Value",
                    "centerLabelFontSize": "15", 
                    "theme": "fusion",
                    "baseFont": "'Kanit', sans-serif",
                    "baseFontSize": "14",
                    "labelFont": "'Kanit', sans-serif",
                    "legendItemFont": "'Kanit', sans-serif"
                },
                "data": [{
                        "label": "ม.ค.",
                        "value": "450"
                    },
                    {
                        "label": "ส.ค.",
                        "value": "500"
                    },
                    {
                        "label": "ก.ย.",
                        "value": "350"
                    }
                ]

    }
  
    FusionCharts.ready(function () {
        var circle = new FusionCharts({
            type: "doughnut2d",
            renderAt: "chart-elec",
            width: "100%",
            height: "300",
            dataFormat: "json",
            dataSource : elec
        }).render();
    });

  
</script>
