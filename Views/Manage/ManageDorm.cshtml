 
@{ 
  Layout = "_Layout"; 
} 
 
<!DOCTYPE html> 
<html lang="en"> 
 
<head> 
    <!-- Required meta tags --> 
    <meta charset="utf-8"> 
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 
    <title>จัดการหอพัก</title> 
    <link href="~/css/models.css" rel="stylesheet" /> 
</head> 
 
<body> 
            <div class="main-panel"> 
                <div class="content-wrapper"> 
                    <div class="row purchace-popup"> 
 
                    </div> 
                    <div class="row"> 
                        @foreach (var dorm in ViewBag.dorms) 
                        { 
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card"> 
                                <div class="card card-statistics"> 
                                    <div class="card-body"> 
                                        <div class="clearfix"> 
                                            <div class="align-items-center"> 
                                                <div class="fluid-container"> 
                                                    @{ 
                                                        if (@dorm.picture != "") 
                                                        { 
                                                            <img width="200" height="150" src="~/uploads/img_mansion/@dorm.picture" /><br /><br /> 
                                                        } 
                                                        else 
                                                        { 
                                                            <img width="200" height="150" src="~/uploads/blank_img.png" /><br /><br /> 
                                                        } 
                                                    } 
                                                    <h4 class="font-weight-medium text-right mb-0 text-center display-4">@dorm.Name</h4> 
                                                    <br /> 
                                                    <h5 class="font-weight-medium text-black mb-0 text-black">มีห้องทั้งหมด : @dorm.calRoom</h5> 
                                                    <h5 class="font-weight-medium text-black mb-0 text-black">ราคา : @dorm.setRates</h5> 
                                                    <br /> 
                                                    <a class="dropdown-item font-weight-medium display-5 text-warning text-center" href="#@dorm.Id"> 
                                                        แก้ไข 
                                                    </a> 
                                                    <a class="dropdown-item font-weight-medium display-5 text-danger text-center" href="@Url.Action("DeleteDorm", "Manage",new { Id_dorm = dorm.Id })"> 
                                                        ลบหอพัก 
                                                    </a> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                            </div> 
                        } 
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card"> 
                            <div class="card card-statistics"> 
                                <div class="card-body"> 
                                    <div class="clearfix"> 
                                        <div class="align-items-center"> 
                                            <div class="fluid-container"> 
                                                <h1 class="mdi mdi-library-plus text-success icon-lg text-center"></h1> 
                                                <a class="dropdown-item display-3 text-center text-success" href="@Url.Action("AddDorm", "Manage")">เพิ่มหอพัก</a> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                            </div> 
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div> 
    
 
 
    @foreach (var dorm in ViewBag.dorms) 
    { 
        <div id="@dorm.Id" class="overlay"> 
            <div class="popup"> 
                <a class="close" href="#">&times;</a> 
                <div class="col-12 grid-margin"> 
                    <div class="card"> 
                        <div class="card-body"> 
                            <h3 class="font-weight-medium text-primary text-center mdi mdi-city mdi-60px">แก้ไขข้อมูลหอพัก @dorm.Name</h3> 
                            <form class="form-sample" asp-controller="Manage" asp-action="EditDorm" method="POST" enctype="multipart/form-data"> 
                                <h4 class="card-description text-primary"> 
                                    ข้อมูลหอพัก 
                                </h4> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ชื่อหอ</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.Name" name="d_name" required type="text" class="form-control" placeholder="ชื่อหอพัก"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-city mdi-18px text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">อัูปภาพ</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <div class="custom-file"> 
                                                        <input value="@dorm.picture" name="picture" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01"> 
                                                        <label value="@dorm.picture" class="custom-file-label" for="inputGroupFile01">@dorm.picture</label> 
                                                    </div> 
 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
 
 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ระบุชั้น</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.Floor" name="setfloor" required type="text" class="form-control" placeholder="หอมีกี่ชั้น" aria-describedby="colored-addon3"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-menu text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ระบุห้อง</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.Room" name="setroom" required type="text" class="form-control" placeholder="จำนวนห้องแต่ละชั้น" aria-describedby="colored-addon3"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-menu text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ราคาเช่า</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.setRates" name="setrates" required type="text" class="form-control" placeholder="ราคาต่อเดือน" aria-describedby="colored-addon3"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-menu text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ระบุค่าน้ำ*</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.setWater" name="setwater" type="text" class="form-control" placeholder="ค่าน้ำต่อยูนิต" aria-describedby="colored-addon3"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-menu text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ระบุค่าไฟ*</label> 
                                            <div class="col-sm-9"> 
                                                <div class="input-group"> 
                                                    <input value="@dorm.setElec" name="setelec" type="text" class="form-control" placeholder="ค่าไฟต่อยูนิต" aria-describedby="colored-addon3"> 
                                                    <div class="input-group-append bg-primary border-primary"> 
                                                        <span class="input-group-text bg-transparent"> 
                                                            <i class="mdi mdi-menu text-white"></i> 
                                                        </span> 
                                                    </div> 
                                                </div> 
                                            </div> 
                                        </div> 
                                    </div> 
 
                                </div> 
 
 
                                <h4 class="card-description text-primary"> ที่อยู่หอพัก (null) </h4> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">เลขที่</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.Add_no" name="add_no" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ถนน</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.Street" name="street" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ตำบล</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.sub_District" name="sub_district" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">อำเภอ</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.District" name="district" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                </div> 
                                <div class="row"> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">จังหวัด</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.Province" name="province" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <div class="col-md-6"> 
                                        <div class="form-group row"> 
                                            <label class="col-sm-3 col-form-label">ไปรษณีย์</label> 
                                            <div class="col-sm-9"> 
                                                <input value="@dorm.Zip_code" name="zip_code" type="text" class="form-control" /> 
                                            </div> 
                                        </div> 
                                    </div> 
                                    <input value="@dorm.Id" name="Id_dorm" hidden="hidden" /> 
                                </div> 
 
 
                                <button type="submit" class="btn btn-success btn-fw item-center"> 
                                    <i class="mdi dormi-check"></i>บันทึก 
                                </button> 
 
 
 
 
 
                            </form> 
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div> 
    } 
    
   
</body> 
 
</html> 
