
@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>จัดการหอพัก</title>

</head>

<body>

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                 <h3 class="font-weight-medium text-primary text-center mdi mdi-city mdi-60px">กรุณาระบุข้อมูลหอพัก</h3>
                  <form class="form-sample" asp-controller ="Manage" asp-action ="AddDorm" method="POST"  enctype="multipart/form-data">
                    <h4 class="card-description text-primary">
                      ข้อมูลหอพัก
                    </h4>
                <div class="row">
                      <div class= "col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">ชื่อหอ</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="d_name" required type="text" class="form-control" placeholder="ชื่อหอพัก"  >
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-city mdi-18px text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>
                      <div class="col-md-6">
                          <div class="form-group row">
                              <label class="col-sm-3 col-form-label">อัพโหลดรูปภาพ (null)</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                    <div class="custom-file">
                                      <input name="picture" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                      <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>
                               
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>


                  <div class="row">
                        <div class= "col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">ระบุชั้น</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="setfloor" required type="text" class="form-control" placeholder="หอมีกี่ชั้น"  aria-describedby="colored-addon3">
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-menu text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>
                      <div class= "col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">ระบุห้อง</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="setroom" required type="text" class="form-control" placeholder="จำนวนห้องแต่ละชั้น"  aria-describedby="colored-addon3">
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-menu text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>
                    </div>
                    <div class="row">
                      <div class= "col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">ราคาเช่า</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="setrates" required type="text" class="form-control" placeholder="ราคาต่อเดือน"  aria-describedby="colored-addon3">
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-menu text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>
                      <div class= "col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">ระบุค่าน้ำ (null)</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="setwater" type="text" class="form-control" placeholder="ค่าน้ำต่อยูนิต" aria-describedby="colored-addon3">
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-menu text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>
                    </div>
                    <div class = "row">
                      <div class= "col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">ระบุค่าไฟ (null)</label>
                              <div class="col-sm-9">
                                <div class="input-group">
                                  <input name="setelec" type="text" class="form-control" placeholder="ค่าไฟต่อยูนิต"  aria-describedby="colored-addon3">
                                    <div class="input-group-append bg-primary border-primary">
                                      <span class="input-group-text bg-transparent">
                                        <i class="mdi mdi-menu text-white"></i>
                                      </span>
                                    </div>
                                </div>
                             </div>
                          </div>
                        </div>

                    </div>


                    <h4 class="card-description text-primary"> ที่อยู่หอพัก (null) </h4>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">เลขที่</label>
                          <div class="col-sm-9">
                            <input name="add_no" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">ถนน</label>
                          <div class="col-sm-9">
                            <input name="street" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">ตำบล</label>
                          <div class="col-sm-9">
                            <input name="sub_district" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">อำเภอ</label>
                          <div class="col-sm-9">
                            <input name="district" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">จังหวัด</label>
                          <div class="col-sm-9">
                            <input name="province" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                       <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">ไปรษณีย์</label>
                          <div class="col-sm-9">
                            <input name="zip_code" type="text" class="form-control" />
                          </div>
                        </div>
                      </div>
                    
                    </div>
                   
                    
                    <button type="submit" class="btn btn-success btn-fw item-center">
                    <i class="mdi mdi-check"></i>บันทึก</button>

 

                    

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
       

          
         
        
      <!-- partial:partials/_footer.html -->
   

<!-- plugins:js -->

<!-- End custom js for this page-->
</body>

</html>
